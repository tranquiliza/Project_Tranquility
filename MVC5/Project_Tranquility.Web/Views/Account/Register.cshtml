@model Project_Tranquility.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="section">
    <h4>@ViewBag.Title</h4>
    <div class="row">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "col s6" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "red-text" })

            <form class="col s6">
                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(m => m.Email, string.Empty, new { @class = "validate" })
                        @Html.LabelFor(m => m.Email)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(m => m.Password, string.Empty, new { @class = "validate" })
                        @Html.LabelFor(m => m.Password)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(m => m.ConfirmPassword, string.Empty, new { @class = "validate" })
                        @Html.LabelFor(m => m.ConfirmPassword)
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input type="submit" class="btn waves-effect" value="Register" />
                    </div>
                </div>
            </form>
        }
    </div>
</div>



@section Scripts {
}
