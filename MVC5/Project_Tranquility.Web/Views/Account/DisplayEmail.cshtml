@{
    ViewBag.Title = "Please confirm email";
}
<div class="section">
    <h4>@ViewBag.Title</h4>
    <div class="row">
        <div class="col s12">
            <p class="flow-text">Please check your email and confirm your email address.</p>
            <p class="red-text flow-text">
                For DEMO only: You can click this link to confirm the email: <a href="@ViewBag.Link">link</a>
                Please change this code to register an email service in IdentityConfig to send an email.
            </p>
        </div>
    </div>
</div>
