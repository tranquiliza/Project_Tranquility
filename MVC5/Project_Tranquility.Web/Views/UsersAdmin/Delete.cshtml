@model Project_Tranquility.Core.DomainModels.Identity.AppUser

@{
    ViewBag.Title = "Delete";
}

<div class="section">
    <h4>@ViewBag.Title</h4>
    <div class="row">
        <div class="col s12">
            <div class="card white darken-1">
                <div class="card-content">
                    <span class="card-title">Are you sure?</span>
                    <p>Are you sure that you wish to delete this user?</p>
                    <div class="row">
                        <table class="col s6">
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Email): </b></td>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.UserName): </b></td>
                                <td>@Html.DisplayFor(model => model.UserName)</td>
                            </tr>
                        </table>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <input type="submit" value="Delete" class="btn red" />
                        <a href="@Url.Action("Index", "UsersAdmin")" class="btn">Back to List</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>