@model Project_Tranquility.Web.Models.AccountViewModels.RegisterViewModel
@{
    ViewBag.Title = "Create a new Account";
}

<div class="section">
    <h4>@ViewBag.Title</h4>
    <div class="row">
        <div class="col s12">
            @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "col s6" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "red-text" })

                <form class="col s6">
                    <div class="row">
                        <div class="input-field col s12">
                            @Html.EditorFor(m => m.Email, new { @class = "Validate" })
                            @Html.LabelFor(m => m.Email)
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            @Html.EditorFor(m => m.Password, new { @class = "Validate" })
                            @Html.LabelFor(m => m.Password)
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            @Html.EditorFor(m => m.ConfirmPassword, new { @class = "Validate" })
                            @Html.LabelFor(m => m.ConfirmPassword)
                        </div>
                    </div>
                    <label>Select User Roles</label>
                    <div class="row">
                        <div class="input-field col s12">
                            @foreach (var item in (SelectList)ViewBag.RoleId)
                            {
                                <input id="@item.Value" type="checkbox" name="SelectedRoles" value="@item.Value" checked="@item.Selected" />
                                <label for="@item.Value">@item.Value</label>
                                <br />
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <input type="submit" class="btn" value="Create" />
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <a href="@Url.Action("Index", "UsersAdmin")" class="btn red">Go Back</a>
        </div>
    </div>
</div>

@section Scripts {
}